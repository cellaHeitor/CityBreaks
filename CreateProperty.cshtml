@page
@model CityBreaks.Pages.CreatePropertyModel
@{
    ViewData["Title"] = "Create Property";
}

<h2>Create New Property</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Property.Name"></label>
        <input asp-for="Property.Name" class="form-control" />
        <span asp-validation-for="Property.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.PricePerNight"></label>
        <input asp-for="Property.PricePerNight" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Property.PricePerNight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.CityId">City</label>
        <select asp-for="Property.CityId" asp-items="Model.CitiesSelectList" class="form-control">
            <option value="">-- Select a city --</option>
        </select>
        <span asp-validation-for="Property.CityId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
